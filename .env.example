# Django Settings для локальної розробки
# Скопіюйте цей файл в .env та налаштуйте змінні

# Debug режим (True для локальної розробки, False для продакшн)
DEBUG=True

# Secret key (згенеруйте новий для продакшн!)
SECRET_KEY=django-insecure-local-development-key-CHANGE-ME

# Database URL (порожнє для SQLite, або PostgreSQL URL для продакшн)
DATABASE_URL=

# Дозволені хости (розділені комами)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Site URL
SITE_URL=http://localhost:8000

# Мова за замовчуванням
LANGUAGE_CODE=uk

# Email налаштування (console backend для розробки)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=Prometey Labs <noreply@prometeylabs.com>
CONTACT_EMAIL=info@prometeylabs.com

# Monobank токен (для тестування payments)
MONOBANK_TOKEN=

# Render специфічні (не потрібні локально)
# RENDER_EXTERNAL_HOSTNAME=
# DJANGO_SETTINGS_MODULE=config.settings
